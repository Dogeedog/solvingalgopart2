<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/roundbutton"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        tools:context=".residuales">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/res2idid"
            android:layout_width="249dp"
            android:layout_height="37dp"
            android:layout_marginTop="30dp"
            android:text="@string/resid"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/res2n"
            android:layout_width="58dp"
            android:layout_height="35dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rect3"
            android:gravity="center"
            android:text="n"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:flow_verticalAlign="bottom"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/res2idid" />

        <TextView
            android:id="@+id/res2ycol"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rect3"
            android:gravity="center"
            android:text="@string/yres"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:flow_verticalAlign="bottom"
            app:layout_constraintStart_toEndOf="@+id/res2n"
            app:layout_constraintTop_toBottomOf="@id/res2idid" />

        <TextView
            android:id="@+id/res2xacol"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rect3"
            android:gravity="center"
            android:text="@string/yres1"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:flow_verticalAlign="bottom"
            app:layout_constraintStart_toEndOf="@+id/res2ycol"
            app:layout_constraintTop_toBottomOf="@id/res2idid" />

        <TextView
            android:id="@+id/res2xbcol"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/rect3"
            android:gravity="center"
            android:text="@string/residual"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:flow_verticalAlign="bottom"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/res2xacol"
            app:layout_constraintTop_toBottomOf="@id/res2idid" />

        <LinearLayout
            android:id="@+id/res2nlayout"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="@+id/res2n"
            app:layout_constraintTop_toBottomOf="@id/res2n" />

        <LinearLayout
            android:id="@+id/res2ylayout"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="@+id/res2ycol"
            app:layout_constraintTop_toBottomOf="@id/res2ycol" />

        <LinearLayout
            android:id="@+id/res2xalayout"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="@+id/res2xacol"
            app:layout_constraintTop_toBottomOf="@id/res2xacol" />

        <LinearLayout
            android:id="@+id/res2xblayout"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="@+id/res2xbcol"
            app:layout_constraintTop_toBottomOf="@id/res2xbcol" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>