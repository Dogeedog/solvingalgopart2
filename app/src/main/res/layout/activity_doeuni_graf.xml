<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/roundbutton"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        tools:context=".graphx">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="249dp"
            android:layout_height="37dp"
            android:layout_marginTop="30dp"
            android:text="@string/graf"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/DOEPlot1btn"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:textSize="11sp"
            android:text="@string/doeplot1tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/DOEPlot2btn"
            app:layout_constraintTop_toBottomOf="@id/textView3"
            android:layout_marginTop="20dp">

        </Button>

        <Button
            android:id="@+id/DOEPlot2btn"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:textSize="11sp"
            android:text="@string/doeplot2tv"
            app:layout_constraintStart_toEndOf="@id/DOEPlot1btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView3"
            android:layout_marginTop="20dp">

        </Button>

        <Button
            android:id="@+id/DOEPlot3btn"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:textSize="11sp"
            android:text="@string/doeplot3tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/DOEPlot2btn"
            android:layout_marginTop="8dp">

        </Button>






        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/DOEPlot1"
            android:layout_width="350dp"
            android:layout_height="400dp"
            app:layout_constraintTop_toBottomOf="@id/DOEPlot1btn"
            android:layout_marginTop="100dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/DOEPlot1tvY"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:gravity="bottom|center"
            android:rotation="270"
            app:layout_constraintEnd_toStartOf="@+id/DOEPlot1"
            app:layout_constraintTop_toBottomOf="@id/DOEPlot1btn"
            android:layout_marginTop="260dp"
            android:text="@string/responsetv" />


        <TextView
            android:id="@+id/DOEPlot1tvX"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/DOEPlot1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/trattvg"/>

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/DOEPlot2"
            android:layout_width="350dp"
            android:layout_height="400dp"
            app:layout_constraintTop_toBottomOf="@id/DOEPlot1btn"
            android:layout_marginTop="100dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/DOEPlot2tvY"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:gravity="bottom|center"
            android:rotation="270"
            app:layout_constraintEnd_toStartOf="@+id/DOEPlot2"
            app:layout_constraintTop_toBottomOf="@id/DOEPlot1btn"
            android:layout_marginTop="260dp"
            android:text="@string/responsetv" />


        <TextView
            android:id="@+id/DOEPlot2tvX"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/DOEPlot2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/trattvg"/>

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/DOEPlot3"
            android:layout_width="350dp"
            android:layout_height="400dp"
            app:layout_constraintTop_toBottomOf="@id/DOEPlot1btn"
            android:layout_marginTop="100dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/DOEPlot3tvY"
            android:layout_width="180dp"
            android:layout_height="160dp"
            android:gravity="bottom|center"
            android:rotation="270"
            app:layout_constraintEnd_toStartOf="@+id/DOEPlot3"
            app:layout_constraintTop_toBottomOf="@id/DOEPlot1btn"
            android:layout_marginTop="220dp"
            android:text="@string/responsetv" />


        <TextView
            android:id="@+id/DOEPlot3tvX"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/DOEPlot3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/trattvg"/>









    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>